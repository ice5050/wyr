extends base.pug

block body
	.mb-2
		a(href="/", class="btn btn-primary")
			i(class="fa fa-home fa-fw")
		a(href="/questions", class="btn btn-info")
			i(class="fa fa-align-justify fa-fw")
		a(href="/questions?status=approved", class="btn btn-success")
			i(class="fa fa-check fa-fw")
		a(href="/questions?status=pending", class="btn btn-warning")
			i(class="fa fa-exclamation fa-fw")
		a(href="/questions?status=denied", class="btn btn-danger")
			i(class="fa fa-times fa-fw")
		a(href="/question/add", class="btn btn-link")
			i(class="fa fa-plus fa-fw")
	.container
	each question in questions
		.row
			.col-md-4.bg-primary.text-white= question.option1
			.col-md-4.bg-warning= question.option2
			.col-md-4.d-flex.justify-content-between
				if question.status == 'approved'
					a(class="btn btn-warning" href=`/question/deny/${question._id}?from=${path}`) Deny
				if question.status == 'denied'
					a(class="btn btn-success" href=`/question/approve/${question._id}?from=${path}`) Approve
				if question.status == 'pending'
					a(class="btn btn-success" href=`/question/approve/${question._id}?from=${path}`) Approve
					a(class="btn btn-warning" href=`/question/deny/${question._id}?from=${path}`) Deny
				a(class="btn btn-danger" href=`/question/remove/${question._id}?from=${path}`) Remove

		hr
