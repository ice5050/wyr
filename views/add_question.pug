extends base.pug

block body
	div(class="d-flex flex-column justify-content-around vh-100")
		div(class="container")
			.row
				.col-md-3
				.col-md-6
					form(method="post", action="/question/add", class="mb-0")
						.form-group
							label(for="option1") ตัวเลือกที่ 1
							input(type="text", name="option1", class="form-control", id="option1", required, autofocus)
						.form-group
							label(for="option2") ตัวเลือกที่ 2
							input(type="text", name="option2", class="form-control", id="option2", required)
						.form-group
							.text-center
								input(type="submit", value="เพิ่ม", class="btn btn-success")
							.text-center.mt-2
								a(class="btn btn-warning", href="/questions") คำถามทั้งหมด
							.text-center.mt-2
								a(class="btn btn-primary", href="/")
									i(class="fa fa-home")
				.col-md-3